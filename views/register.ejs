<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
<script>
    $(document).ready(function(){
        jQuery.validator.addMethod('gmail', function (value, element) {
    return this.optional(element) || /^\w*\@(?!org)(?!net)[g][m][a][i][l]\.com$/i.test(value);
}, "not a valid Gmail email address");
$.validator.addMethod("passwordFormatCheck", function(value, element) {
    return this.optional(element) || /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).*$/.test(value);
}, 'Password must contain one capital letter,on small letter,one numerical and one special character');
$.validator.addMethod( "lettersonly", function( value, element ) {
    return this.optional( element ) || /^[a-z]+$/i.test( value );
}, "Letters only please" );
            $('#registerfrm').validate({
                rules:{
                    firstname:{
                        required:true,
                        lettersonly:true
                    },
                    lastname:{
                        required:true,
                        lettersonly:true
                    },
                    email:{
                        required:true,
                        // email:true,
                        gmail:true
                    },
                    phone:{
                        required:true,
                        number:true,
                         minlength:10,
                         maxlength:10
                    },
                    password:{
                        required:true,
                        minlength:8,
                        passwordFormatCheck:true

                    },
                    confirmpass:{
                        required:true,
                        equalTo:"#password"
                    }
                },
                messages:{
                    firstname:{
                        required:"Please enter first name",
                        lettersonly:"Only letters will be accepted"
                    },
                    lastname:{
                        required:"Please enter last name",
                        lettersonly:"Only letters will be accepted",
                       
                    },
                    email:{
                        required:"Please enter email",
                        // email:"Please enter a valid email",
                        gmail:"Please enter only gmail account"
                    },
                    phone:{
                        required:"Please enter phone number",
                        number:"Only numer will be accepted",
                        minlength:"Please enter 10 digit",
                        maxlength:"Please enter 10 digit"
                    },
                    password:{
                      required:"Please enter password",
                      minlength:"Password must contain atleast 8 charecters"
                    },
                    confirmpass:{
                        required:"Please enter confirm password",
                        equalTo:"Confirm password should be same as password"
                    }
                }
            })
    })
</script>